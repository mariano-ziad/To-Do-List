<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <% newTask.forEach((task)=>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" value="<%=task._id%>" type="checkbox" onchange="submit()">
                    <p><%= task.name %></p>
                </div>
            </form>
            <% }) %>
                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required autofocus>
                    <button type="submit" name="list" value="<%= listTitle %>">+</button>
                </form>
    </div>
    <%- include("footer") -%>